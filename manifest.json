{

  "manifest_version": 2,
  "name": "Bookmark Manager",
  "version": "1.0",

  "description": "A tool for syncing your bookmarks at a more granular (per folder and bookmark) level.",

  "permissions": [
    "bookmarks",
    "storage"
  ],

  "icons": {
    "48": "icons/border-48.png"
  },

  // "browser_action": {
  //   "default_icon": "icons/border-48.png",
  //   "default_title": "Bookmark Manager",
  //   "default_popup": "popup/settings.html"
  // },

  "background": {
    "scripts": ["./scripts/background.js"],
    "persistent": false
  }

}
